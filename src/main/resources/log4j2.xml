<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Property>
        <Property name="LOG_FILE">logs/vticket.log</Property>
        <Property name="LOG_FILE_MAX_SIZE">10MB</Property>
        <Property name="LOG_FILE_MAX_FILES">10</Property>
    </Properties>

    <!-- Use Disruptor for async logging -->
    <AsyncLoggerConfig includeLocation="false" />

    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
        </Console>

        <!-- File Appender -->
        <RollingFile name="FileAppender" fileName="${LOG_FILE}"
                     filePattern="logs/vticket-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="${LOG_FILE_MAX_SIZE}"/>
            </Policies>
            <DefaultRolloverStrategy max="${LOG_FILE_MAX_FILES}"/>
        </RollingFile>

        <!-- Error File Appender -->
        <RollingFile name="ErrorFileAppender" fileName="logs/vticket-error.log"
                     filePattern="logs/vticket-error-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="${LOG_FILE_MAX_SIZE}"/>
            </Policies>
            <DefaultRolloverStrategy max="${LOG_FILE_MAX_FILES}"/>
        </RollingFile>

        <!-- Async Appender with Disruptor for better performance -->
        <AsyncAppender name="AsyncFile" bufferSize="8192" includeLocation="false">
            <AppenderRef ref="FileAppender"/>
        </AsyncAppender>

        <AsyncAppender name="AsyncError" bufferSize="8192" includeLocation="false">
            <AppenderRef ref="ErrorFileAppender"/>
        </AsyncAppender>
    </Appenders>

    <Loggers>
        <!-- Root logger - level được điều khiển bởi application.yml -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AsyncFile"/>
            <AppenderRef ref="AsyncError"/>
        </Root>
    </Loggers>
</Configuration>